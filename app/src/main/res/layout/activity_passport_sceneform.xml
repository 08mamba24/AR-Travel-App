<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ARGemViewer">

    <fragment
        android:id="@+id/sceneform_passport_fragment"
        android:name="com.example.artravel.WritingArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSceneForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:clipToPadding="false" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:background="@color/colorPrimaryTest"
        android:backgroundTint="@color/colorPrimaryTest"
        android:fontFamily="@font/proximanova_bold"
        android:text="@string/com_facebook_share_button_text" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        android:background="@color/colorPrimaryTest"
        android:backgroundTint="@color/colorPrimaryTest"
        android:fontFamily="@font/proximanova_bold"
        android:text="back" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="90dp"
        app:srcCompat="@drawable/arrow3" />


</FrameLayout>