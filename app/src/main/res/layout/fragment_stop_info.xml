<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="stopInfoViewModel"
            type="com.example.artravel.StopInfoViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ivInfoStopImage"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            bind:imageUrl="@{stopInfoViewModel.imageUrl}" />

        <TextView
            android:id="@+id/tvInfoStopTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivInfoStopImage"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@{stopInfoViewModel.stopTitle}"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cardViewStopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/tvInfoStopTitle"
            card_view:cardBackgroundColor="@color/cardview_light_background"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="8dp">

            <TextView
                android:id="@+id/tvInfoParagraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@{stopInfoViewModel.stopInfoParagraph}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnGemLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/cardViewStopInfo"
            android:text="Continue" />

        <Button
            android:id="@+id/btnQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnGemLocation"
            android:text="Answer question" />
    </RelativeLayout>
</layout>